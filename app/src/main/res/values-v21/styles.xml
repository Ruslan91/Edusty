<?xml version="1.0" encoding="utf-8"?>
<resources>
     <style name="AppTheme" parent="android:Theme.Material.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:editTextBackground">@drawable/edustytheme_edit_text_holo_light</item>
    <item name="android:textColorHighlight">#998f30dd</item>
    <item name="android:textSelectHandleLeft">@drawable/edustytheme_text_select_handle_left
    </item>
    <item name="android:textSelectHandleRight">@drawable/edustytheme_text_select_handle_right
    </item>
    <item name="android:textSelectHandle">@drawable/edustytheme_text_select_handle_middle</item>

    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewEdustyTheme</item>

    <item name="android:listChoiceIndicatorMultiple">
        @drawable/edustytheme_btn_check_holo_light
    </item>

    <item name="android:listChoiceIndicatorSingle">@drawable/edustytheme_btn_radio_holo_light
    </item>

    <item name="android:buttonStyle">@style/ButtonEdustyTheme</item>

    <item name="android:imageButtonStyle">@style/ImageButtonEdustyTheme</item>

    <item name="android:dropDownSpinnerStyle">@style/SpinnerEdustyTheme</item>

    <item name="android:progressBarStyleHorizontal">@style/ProgressBarEdustyTheme</item>

    <item name="android:seekBarStyle">@style/SeekBarEdustyTheme</item>

    <item name="android:ratingBarStyle">@style/RatingBarEdustyTheme</item>

    <item name="android:ratingBarStyleIndicator">@style/RatingBarBigEdustyTheme</item>

    <item name="android:ratingBarStyleSmall">@style/RatingBarSmallEdustyTheme</item>

    <item name="android:buttonStyleToggle">@style/ToggleEdustyTheme</item>

    <item name="android:listChoiceBackgroundIndicator">
        @drawable/edustytheme_list_selector_holo_light
    </item>

    <item name="android:activatedBackgroundIndicator">
        @drawable/edustytheme_activated_background_holo_light
    </item>

    <item name="android:fastScrollThumbDrawable">@drawable/edustytheme_fastscroll_thumb_holo
    </item>

</style>

<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
<item name="android:background">@color/actionbar_background</item>
<item name="android:icon">@drawable/action_bar_ic_launcher</item>
</style>
</resources>
